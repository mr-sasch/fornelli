/* Бренд */
.brand
	padding 230px 0
	display block
	background url('../../images/9brend/brand-bg.png') no-repeat
	background-size cover
	/* Заголовок */
.brand__title
	margin auto
	display flex
	max-width 1030px
	justify-content space-between
	vertical-align middle
.brand__title-text
	max-width 540px
	font-size 50px
	line-height 47px
	color #565656
	/* /Заголовок */

	/* Граафики */
.brand__info-item-txt
	margin 100px 0 60px
	font-size 24px
	line-height 36px
	color greyTxt
.brand__info-item-txt-ttl
	font-weight 600
.brand__info
	margin auto
	display flex
	max-width 1160px
	justify-content space-between
	/* /Граафики */
/* /Бренд */
