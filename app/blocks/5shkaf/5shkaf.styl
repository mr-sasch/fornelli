/* Шкафы */
.shkaf
	position relative
	margin-top 140px
	display block
	text-align center
	background-image url('../../images/5shkaf/shkaf-bg.png')
	background-repeat no-repeat
	background-size contain
.shkaf__content
	position relative
	z-index 20
	margin-top 210px
	margin-left 570px
	display inline-block
	width 100%
	max-width 1100px
	text-align center
.shkaf__left-photo
	position absolute
	z-index 10
	top 0
	left 0

	/* Стрелки */
.shkaf__content-arrow
	position absolute
	top -110px
.shkaf__content-col-arrow-1
	left calc(50% - 180px)
.shkaf__content-col-arrow-2
	right calc(50% - 180px)
	/* /Стрелки */

	/* Заголовок */
.shkaf__content-title-cont
	text-align center
.shkaf__content-title
	display inline-block
	max-width 500px
	font-size 60px
	font-weight 600
	line-height 72px
	text-align center
	color #fff
	text-transform uppercase
	/* /Заголовок */

	/* Выберите шкаф */
.shkaf__content-col
	position relative
	display inline-block
	width 49%
	text-align center

	/* Электрический */
.shkaf__content-shkafi
	position relative
	height 600px
.shkaf__content-shkaf
	position absolute
	left 50%
	display none
	transform translateX(-50%)
.shkaf__content-shkaf-show
	display block

.shkaf__content-col-title
	margin-top 30px
	font-size 30px
	font-weight 600
	color #fff
	text-transform uppercase
	/* /Электрический */
	/* /Выберите шкаф */

	/* Кнопки */
.shkaf__content-btns
	margin-bottom 100px
.shkaf__content-btns-ttl
	margin-top -50px
	margin-bottom 40px
	font-size 60px
	font-weight 600
	color #fff
	text-transform uppercase
.shkaf__content-btns-ttl-col
	display inline-block
	width 49%
	text-align center
.shkaf__content-btns-ttl-col-label
	position relative
	z-index 10
	margin-left -45px
.shkaf__content-btns-ttl-col-label:first-child
	margin-left 0
.shkaf__content-btns-ttl-col-label-top
	z-index 20
	/* /Кнопки */
/* /Шкафы */
